<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Disponible"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="$ 0,00"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <Button
        android:id="@+id/boton_estacionamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estacionamiento" />

    <Button
        android:id="@+id/boton_consumos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis consumos" />

    <Button
        android:id="@+id/boton_credito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargar crédito" />

    <Button
        android:id="@+id/boton_transito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado del Tránsito" />

    <Button
        android:id="@+id/boton_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis datos" />

</LinearLayout>